  const Y = HV_FROM_HRC;
  if(hv <= Y[0]){
    const x0=HRC_MIN, x1=HRC_MIN+1, y0=Y[0], y1=Y[1];
    return x0 + (hv - y0)*(x1 - x0)/(y1 - y0);
  }
  if(hv >= Y.at(-1)){
    const x0=HRC_MAX-1, x1=HRC_MAX, y0=Y.at(-2), y1=Y.at(-1);
    return x0 + (hv - y0)*(x1 - x0)/(y1 - y0);
  }
  // äºŒåˆ†æœå°‹ y[i] â‰¤ hv â‰¤ y[i+1]
